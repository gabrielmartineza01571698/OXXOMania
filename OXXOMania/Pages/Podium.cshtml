@page
@model PodiumModel
@{
    ViewData["Title"] = "Podium";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100" style="padding-left: 240px; padding-top: 50px;">
    <div class="row border rounded-5 shadow justify-content-center p-4 bg-white w-100">
        <h2 class="text-center mb-4">üèÜ Podio de Usuarios</h2>

        <table class="table table-hover text-center">
            <thead class="thead-light">
                <tr>
                    <th>Posici√≥n</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Monedas</th>
                    <th>Puntaje</th>
                    <th>Tiempo Jugado</th>
                </tr>
            </thead>
            <tbody>
                
                @for (int i = 3; i < @Model.ListaUsuarios.Count; i++)
                {
                    var usuario = @Model.ListaUsuarios[i];
                    <tr class="@(i == 0)">
                        <td>@(i + 1)</td>
                        <td>@usuario.nombre</td>
                        <td>@usuario.apellido</td>
                        <td>@usuario.monedas</td>
                        <td>@usuario.puntaje</td>
                        <td>@usuario.tiempo_jugado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
