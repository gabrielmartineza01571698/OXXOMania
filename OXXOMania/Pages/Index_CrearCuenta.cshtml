@page
@model Index_CrearCuentaModel
@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = "_LayoutLogin";
}


<div class="container d-flex justify-content-center align-items-center"> 
<div class="div-cc row border rounded-5 shadow">
    <div class="col-md-6">
        <img src="~/images/oxxo-logo.png" alt="Icono OXXO" width="100px">
        <h1>Crear cuenta</h1>
    </div>
    <div class="col-md-6">
        <div class="row">
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Nombre:</h6>
                        <input type="text" class="form-control form-control-lg bg-light fs-6" asp-for="nombre" placeholder="Introduce tu nombre" />
                        <span asp-validation-for="nombre" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <h6>Apellido:</h6>
                        <input type="text" class="form-control form-control-lg bg-light fs-6" asp-for="apellido" placeholder="Introduce tu apellido" />
                        <span asp-validation-for="apellido" class="text-danger small"></span>
                    </div>
                </div>
                
                <h6 class="mt-3">Usuario:</h6>
                <input type="text" class="form-control form-control-lg bg-light fs-6" asp-for="user" placeholder="Introduce un usuario" />
                <span asp-validation-for="user" class="text-danger small"></span>

                <h6 class="mt-3">Tienda:</h6>
                <input type="text" class="form-control form-control-lg bg-light fs-6" asp-for="sucursal" placeholder="Introduce tu usuario" />
                <span asp-validation-for="sucursal" class="text-danger small"></span>

                <h6 class="mt-3">Contraseña:</h6>
                <input type="text" class="form-control form-control-lg bg-light fs-6" asp-for="password" placeholder="Introduce tu contraseña"/>
                <span asp-validation-for="password" class="text-danger small"></span>

                <input type="submit" class="btn-login btn btn-lg w-100 fs-6 mt-4 mb-4" value="Crear cuenta"/>
            </form>            
        </div> 
        <div class="row">
            <p>¿Ya tienes cuenta? <a asp-page="/Index" class="link-danger">Inicia sesión</a></p>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


